# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./paksa_finance.db

# Security Configuration
SECRET_KEY=production-secret-key-change-this-in-real-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Feature Flags
FEATURE_ENABLE_AI_FEATURES=true
FEATURE_ENABLE_MULTI_TENANT=true
FEATURE_ENABLE_AUDIT_LOGGING=true
FEATURE_ENABLE_RATE_LIMITING=true
FEATURE_ENABLE_CACHING=true